<%- include('./include/head.ejs') %>
<%- include('./include/sidebar.ejs') %>
<div class="main-panel">
    <div class="content-wrapper pb-0">
      <div class="page-header flex-wrap">
        <% if (locals.message && locals.message.danger ){ %>
            <div class="alert alert-danger">
          <%= message.danger %>
          <%= message.message %>
          </div>
          <% } %>
<table class="table" id="myTable">
    <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Price</th>
            <th>State</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Action</th>
        </tr>
    </thead>

<tbody>
    <% for(var i = 0; i < destinations.length; i++) { %>
        <tr>
            <td><%= i + 1 %></td>
            <td><%= destinations[i].name %></td>
            <td><%= destinations[i].price %></td>
            <td><%= destinations[i].state %></td>
            <td><%= destinations[i].startdate %></td>
            <td><%= destinations[i].enddate %></td>
            <td><a  href="/del_dest/<%= destinations[i].id %>">
                <span class="text-gradient"><i class="fa fa-trash"></i></span>
                <a  href="/single_dest/<%=destinations[i].id %>">
                    <span class="text-gradient"><i class="fa fa-eye"></i></span>
                <a  href="/edit_dest/<%=destinations[i].id %>">
                    <span class="text-gradient"><i class="fa fa-pen"></i></span></td>
        </tr>
        <% } %>
</tbody>
</table>
</div>

<!-- main-panel ends -->
           </div>
<%- include('./include/footer.ejs') %>