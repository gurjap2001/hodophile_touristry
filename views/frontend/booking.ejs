<%- include ('../frontend/include_front/head_front.ejs') %>
<%- include ('../frontend/include_front/navbar.ejs') %>
<section class="ftco-section ftco-no-pb contact-section mb-4" style="background-color: rgb(163, 125, 202);">
<div class="container">
    <h3>You can now save changes to your booking.</h3>
<form action="/payment_booking/<%=order_id%>" method="post">
    <div class="form-group">
      <label style="color:black">Name</label>
      <input type="text" name="name" class="form-control" value="<%=users.name %>" placeholder="<%=users.name %>">
    </div> 
    <div class="form-group">
      <label style="color:black">Email Id</label>
      <input type="text" name="email" class="form-control" value="<%= users.email %>" placeholder="<%= users.email %>">
    <div><br>
      <input type="hidden" name = "dest_id" value="<%=destinations.id %>">
    </div>
    <div>
      <input type="hidden" name = "order_id" value="<%= order_id %>">
    </div>
    <div class="form-group"><label style="color:black">No. of People: </label><br>
        <% const number = price/(destinations.price*100) %>
      <input type="number" name="number_p" value="<%=number%>" placeholder="<%=number%>">
    </div>
    <div class="form-group">
        <% const pricee = price/100; %>
      <input type="hidden" name="price" value="<%=pricee%>">
    </div>
  <input type="submit" value="Save changes"class="btn btn-primary">
</form></div><br></section>
<%- include ('include_front/footer_front.ejs') %>