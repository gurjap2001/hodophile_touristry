<%- include ('./include_front/head_front.ejs') %>
<%- include ('./include_front/navbar.ejs') %>

<section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url('/assets_front/images/pexels-leah-kelley-3935702.jpg');">
  <div class="overlay"></div>
  <div class="container">
    <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-center">
      <div class="col-md-9 ftco-animate pb-5 text-center">
       <p class="breadcrumbs"><span class="mr-2"><a href="/website">Home <i class="fa fa-chevron-right"></i></a></span> <span>Blog <i class="fa fa-chevron-right"></i></span></p>
       <h1 class="mb-0 bread">Blog</h1>
     </div>
   </div>
 </div>
</section>
<section class="ftco-section">
  <div class="container">
    <div class="row d-flex">
      <% blog.forEach(blog => { %>
        <% const dateString = blog.date;
        const date = new Date(dateString); %>
        <% if(date instanceof Date) { %>
<div class="col-md-4 d-flex ftco-animate">
 <div class="blog-entry">
  <a class="block-20" style="background-image: url(assets/images/<%= blog.photo %>)">
  </a>
  <div class="text">
   <div class="d-flex align-items-center mb-4 topp">
    <div class="one">
     <span class="day" style="font-size:xx-large"><%=date.getDate() %> </span>
   </div>
   <div class="two">
     <span class="yr"> <%= date.getFullYear() %></span>
     <span class="mos"> <%=date.toLocaleString('default', { month: 'long' }) %></span>
   </div>
 </div>
 <% function stripTags(html) {
  return html.replace(/<[^>]*>?/gm, '');
 } %>
 <p><%- stripTags(blog.content).slice(0, 200) %>.....</p>
 <p><a href="/blogsingle/<%=blog.id%>" class="btn btn-primary">Read more</a></p>
</div>
</div>
</div> <% }})%>
</div>
</div>
</section>	  
<% if (currentUser) { %>
<section><CENTER><h2>MY BLOG</h2></CENTER>
  <div class="container"><p style="color:aqua;font-size:25px"><strong>You can upload any of your personal travel blog here: </strong></p>
    <p style="color:rgb(0, 76, 255);font-size:18px">Note: It will be uploaded publicly on the website.</p>
  <form method="post" action="/blogs" enctype="multipart/form-data">
    <div class="form-group">
      <label style="color:black">Date:</label>
      <input type="date" name="date" placeholder="Enter the Date">
  </div>
  <div class="form-group">
    <label style="color:black">Upload any blog's picture:</label>
    <input type="file" name="photo">
  </div>
  <div class="form-group">
    <label style="color:black">Blog's Title: </label>
    <textarea rows="2" cols="30" name="title"></textarea>
  </div>
  <div class="form-group">
    <input type="hidden" name="user_id"value="<%=currentUser.id%>">
  </div>
  <div class="form-group">
    <textarea id="mytextarea" name="content"></textarea>
    <br></div>
  <button type="submit" class="btn btn-primary mr-2"> Submit </button>
  <button class="btn btn-light">Cancel</button>
</form></div> 
</section>
<%}%>  <br/>
